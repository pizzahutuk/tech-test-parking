{
    "compilerOptions": {
      "lib": ["ES2020"],
      "module": "commonjs",
      "allowJs": true,
      "declaration": false,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2020",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "incremental": true,
      "resolveJsonModule": true,
      "plugins": [
        {
          "transform": "ts-auto-mock/transformer",
          "cacheBetweenTests": false
        }
      ]
    },
    "exclude": [
        "node_modules",
        "dist",
        "bin",
      ],
  }
  